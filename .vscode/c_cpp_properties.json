{
    "env": {
        "devkitpro": "/opt/devkitpro",
        "devkitarm": "/opt/devkitPro/devkitARM",
        "ctrulib": "/opt/devkitPro/libctru"
    },
    "configurations": [
        {
            "name": "Library - Unix",
            "includePath": [
                "${default}",
                "/opt/devkitPro/devkitARM/arm-none-eabi/include/**",
                "/opt/devkitPro/devkitARM/lib/**",
                "/opt/devkitPro/libctru/include",
                "${workspaceFolder}/libctrpf/include",
                "/opt/devkitPro/portlibs/3ds/bin",
                "${workspaceFolder}/includes"
            ],
            "defines": [
                "ARM11",
                "_3DS"
            ],
            "compilerPath": "/opt/devkitPro/devkitARM/bin/arm-none-eabi-g++",
            "browse": {
                "path": [
                    "${workspaceFolder}/libctrpf/include/**",
                    "/opt/devkitPro/libctru/include/**"
                ],
                "limitSymbolsToIncludedHeaders": true,
                "databaseFilename": ""
            },
            "cStandard": "c11",
            "cppStandard": "gnu++20",
            "intelliSenseMode": "gcc-arm"
        }
    ],
    "version": 4
}